<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder  xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	  xmlns:p1="urn:import:de.bbcdaas.opendata.gwt.client.layoutviews.widgets">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	 <g:HTMLPanel width="100px" height="50px">
      <g:FocusPanel width="100%" height="100%" ui:field="focusPanel">
      	<g:HorizontalPanel spacing="5" verticalAlignment="ALIGN_TOP" width="100%" height="100%" horizontalAlignment="ALIGN_RIGHT">
      	<g:VerticalPanel height="100%" width="100%">
      	<g:Label>Username</g:Label>
      	<g:TextBox ui:field="username"></g:TextBox>
      </g:VerticalPanel>
      	<g:VerticalPanel height="100%">
      	<g:Label>Password</g:Label>
      	<g:PasswordTextBox ui:field="password"></g:PasswordTextBox>
      </g:VerticalPanel>
      	<g:Cell verticalAlignment="ALIGN_BOTTOM">
      		<p1:ImageButton styleName="imageBtn" text="Login" width="75px" ui:field="login"/>
      	</g:Cell>
      	<g:Cell verticalAlignment="ALIGN_BOTTOM">
      		<p1:ImageButton styleName="imageBtn" text="signup"  ui:field="signup" height="30pxpx"/>
      	</g:Cell>
      </g:HorizontalPanel>
      </g:FocusPanel>
    </g:HTMLPanel>
</ui:UiBinder> 