<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	 xmlns:p1="urn:import:de.bbcdaas.opendata.gwt.client.layoutviews.widgets">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel width="100%" height="100%">
		<g:DecoratorPanel width="230px">
			<g:VerticalPanel spacing="5" width="100%" height="100%" horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" stylePrimaryName="filterWidget">
			<g:ListBox visibleItemCount="1" ui:field="columnsLB"/>
			<g:ListBox visibleItemCount="1" ui:field="operationsLB"/>
			<g:TextBox ui:field="filterValue"/>
			<g:HorizontalPanel spacing="10">
				<p1:ImageButton  styleName="imageBtn" text="Apply" ui:field="applyFilter"/>
				<p1:ImageButton   styleName="imageBtn" text="Cancel" ui:field="cancelFilter"/>
			</g:HorizontalPanel>
		</g:VerticalPanel>
		</g:DecoratorPanel>
	</g:HTMLPanel>
</ui:UiBinder> 