<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}

	 .anchor:hover{
      cursor: pointer;
  }		
	</ui:style>
	<g:HTMLPanel>
		<g:HorizontalPanel verticalAlignment="ALIGN_TOP" width="100%" height="100%" horizontalAlignment="ALIGN_RIGHT" spacing="20">
			<g:Cell horizontalAlignment="ALIGN_RIGHT">
				<g:Button ui:field="logout">Logout</g:Button>
			</g:Cell>
			<g:Cell horizontalAlignment="ALIGN_RIGHT">
				<g:Label text="New Label" ui:field="name"/>
			</g:Cell>
			<g:Anchor ui:field="account" text="Account" addStyleNames="{style.anchor}"/>
		</g:HorizontalPanel>
			


	
		
	</g:HTMLPanel>
</ui:UiBinder> 