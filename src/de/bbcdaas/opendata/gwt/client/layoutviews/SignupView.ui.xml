<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>
	
	
		<g:FormPanel width="100%" height="100%" method="METHOD_POST" styleName="signupBackground">
			<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" width="100%" height="100%">
				<g:Cell horizontalAlignment="ALIGN_CENTER">
					<g:VerticalPanel width="500px" height="400px" styleName="signupBackground" spacing="10">
			<g:Cell horizontalAlignment="ALIGN_CENTER">
				<g:Grid width="100%" height="100%">
				<g:row>
					<g:customCell>
						<g:Label text="Username(atleast 6 char)" styleName="gradientText"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="usernameBox" styleName="signupTB" height="30px" width="200px"/>
					</g:customCell>
					<g:customCell>
						<g:Label ui:field="usernameErrorBox"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Email" styleName="gradientText"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="emailBox" styleName="signupTB"/>
					</g:customCell>
					<g:customCell>
						<g:Label ui:field="emailErrorBox"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Password(atleast 6 char)" styleName="gradientText"/>
					</g:customCell>
					<g:customCell>
						<g:PasswordTextBox ui:field="passwordBox" styleName="signupTB"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Confirm Password" styleName="gradientText"/>
					</g:customCell>
				
					<g:customCell>
						<g:PasswordTextBox ui:field="confirmPasswordBox" styleName="signupTB"/>
					</g:customCell>
					<g:customCell>
						<g:Label ui:field="passwordErrorBox"/>
					</g:customCell>
				</g:row>
				
			</g:Grid>
			</g:Cell>
<g:Cell horizontalAlignment="ALIGN_CENTER">
	<g:Button text="Submit" ui:field="submit"/>
</g:Cell>

			</g:VerticalPanel>
				</g:Cell> 
					</g:HorizontalPanel>
	
		</g:FormPanel>
	
	
	
</ui:UiBinder> 